@model IEnumerable<Impact>
@{
    ViewData["Title"] = "Impacts";
}

<div class="text-center">
    <h1 class="display-4">Impacts</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Impact ID</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Impact i in Model)
        {
            <tr>
                <td>@i.ImpactId</td>
                <td>@i.Description</td>
                <td><a class="btn btn-secondary" href="UpdateImpact/@i.ImpactId">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="AddImpact">Add New Impact</a>