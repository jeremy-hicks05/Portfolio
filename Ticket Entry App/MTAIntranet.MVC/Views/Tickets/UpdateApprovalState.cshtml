@model MTAIntranet.SQL.Entities.ApprovalState
@{
    ViewData["Title"] = "Update Approval State";
}

<div class="text-center">
    <h1 class="display-4">Update Approval State</h1>
</div>

@if (Model is not null)
{
    <form asp-controller="Tickets" asp-action="UpdateApprovalState" method="post">

        <input class="form-control" type="hidden" asp-for="@Model.ApprovalStateId" />

        <div class="row">
            <div class="col">
                <label asp-for="@Model.Name"></label>
                <input class="form-control" asp-for="@Model.Name" />
                <span asp-validation-for="@Model.Name"></span>
            </div>
            <div class="col"></div>
        </div>
        <button class="btn btn-primary mt-2" type="submit">Update Approval State</button>
    </form>
}
else
{
    <h2>Approval State ID Not Found</h2>
}