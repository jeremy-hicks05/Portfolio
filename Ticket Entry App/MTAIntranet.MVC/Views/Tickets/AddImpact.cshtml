@model MTAIntranet.MVC.Models.ViewModels.ImpactViewModel
@{
    ViewData["Title"] = "Add Impact";
}

<div class="text-center">
    <h1 class="display-4">Add Impact</h1>
</div>

<form asp-controller="Tickets" asp-action="AddImpact">
    <div class="row">
        <div class="col">
            <label asp-for="@Model.Description"></label>
            <input class="form-control" asp-for="@Model.Description" />
            <span asp-validation-for="@Model.Description"></span>
        </div>
        <div class="col"></div>
    </div>

    <button class="btn btn-primary mt-2" type="submit">Add Impact</button>
</form>