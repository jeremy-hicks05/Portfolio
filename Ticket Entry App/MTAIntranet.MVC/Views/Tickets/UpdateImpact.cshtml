@model MTAIntranet.SQL.Entities.Impact
@{
    ViewData["Title"] = "Update Impact";
}

<div class="text-center">
    <h1 class="display-4">Update Impact</h1>
</div>

<form asp-controller="Tickets" asp-action="UpdateImpact">

    <input class="form-control" type="hidden" asp-for="@Model.ImpactId" />

    <div class="row">
        <div class="col">
            <label asp-for="@Model.Description"></label>
            <input class="form-control" asp-for="@Model.Description" />
            <span asp-validation-for="@Model.Description"></span>
        </div>
        <div class="col"></div>
    </div>
    <button class="btn btn-primary mt-2" type="submit">Update Impact</button>
</form>